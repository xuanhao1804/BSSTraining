<div style="padding:20px; text-align:center;">
  <button onclick="sayHello()" style="
    padding:14px 32px;
    font-size:18px;
    font-weight:700;
    color:#fff;
    background: linear-gradient(270deg, #ff6ec4, #7873f5, #4ADEDE, #ff6ec4);
    background-size: 800% 800%;
    border:none;
    border-radius:12px;
    cursor:pointer;
    box-shadow: 0 0 20px rgba(255,110,196,0.6), 0 0 30px rgba(120,115,245,0.5);
    transition: all 0.4s ease;
    animation: gradientShift 6s ease infinite;
    outline:none;
  "
  onmouseover="this.style.transform='scale(1.12)'; this.style.boxShadow='0 0 25px rgba(255,110,196,0.8), 0 0 35px rgba(120,115,245,0.7)'"
  onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 0 20px rgba(255,110,196,0.6), 0 0 30px rgba(120,115,245,0.5)'"
  >
    Click here to say hello
  </button>
</div>

<style>
@keyframes gradientShift {
  0% {background-position: 0% 50%;}
  50% {background-position: 100% 50%;}
  100% {background-position: 0% 50%;}
}
</style>

<script>
function sayHello() {
  alert("Hello! this application is written by HaoLX");
}
</script>

